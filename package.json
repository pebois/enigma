{
  "name": "@pebois/enigma",
  "version": "1.0.0",
  "description": "Enigma machine",
  "author": "Pierre-Emmanuel Bois",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc --build tsconfig.json --pretty && tsc-alias --project tsconfig.json",
    "build-watch": "tsc-watch --project tsconfig.json --onSuccess \"tsc-alias --project tsconfig.json\"",
    "lint": "eslint . --config .eslintrc.json",
    "test": "mocha dist/test"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "eslint": "^7.24.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-typescript-sort-keys": "^1.6.0",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "tsc-alias": "^1.2.9",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4"
  }
}
